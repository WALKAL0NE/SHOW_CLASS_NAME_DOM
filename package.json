{
  "name": "sass-class-extractor",
  "displayName": "SASS Class Extractor",
  "description": "Extract class structure from HTML/Liquid/Astro/PHP/Vue files and convert to SASS format",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:liquid",
    "onLanguage:astro",
    "onLanguage:php",
    "onLanguage:vue"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sass-class-extractor.extractToClipboard",
        "title": "Extract SASS Class Structure"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection || editorTextFocus",
          "command": "sass-class-extractor.extractToClipboard",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "SASS Class Extractor",
      "properties": {
        "sassClassExtractor.outputFormat": {
          "type": "string",
          "default": "sass",
          "enum": ["sass", "scss"],
          "enumDescriptions": [
            "SASS syntax (indented, no braces)",
            "SCSS syntax (CSS-like, with braces)"
          ],
          "description": "Choose output format: SASS or SCSS syntax"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^3.7.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "node-html-parser": "^6.1.0"
  }
}
